{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:node/recommended"
    ],
    "plugins": [
        "json-format"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {},
    "settings": {
        "json/sort-package-json": "standard",
        "json/ignore-files": [
            "**/package-lock.json"
        ],
        "json/json-with-comments-files": [
            ".vscode/**"
        ]
    }
}